#test not_square
  int rc = RC_OK;
  matrix_t m;
  const int rows = rand() % 100 + 1;
  const int cols = rows + 1;
  rc = s21_create_matrix(rows, cols, &m);
  ck_assert_int_eq(rc, RC_OK);

  matrix_t res;
  rc = s21_adjugate(&m, &res);
  
  ck_assert_int_eq(rc, RC_CALCULATIONS_CANNOT_BE_PERFORMED);
  
  s21_remove_matrix(&m);


